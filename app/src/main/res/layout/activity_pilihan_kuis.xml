<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".pilihan_kuis">

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/tlsMatapelajaran"
        android:text="PILIH MATA PELAJARAN"
        android:textSize="20dp"
        android:padding="20dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black" />

    <ScrollView
        android:id="@+id/scr1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_below="@id/tlsMatapelajaran">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:layout_margin="2dp"
                android:id="@+id/btnPkn"
                android:text="kuis PKN"
                android:background="#FF8E00"
                android:layout_width="160dp"
                android:layout_height="100dp" />

            <Button
                android:layout_margin="2dp"
                android:id="@+id/btnBinggris"
                android:text="bahasa ingris"
                android:background="#516BEB"
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@id/btnPkn" />

            <Button
                android:id="@+id/btnMtk"
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:layout_below="@+id/btnPkn"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:background="#7267CB"
                android:text="Matematika" />

            <Button
                android:layout_margin="2dp"
                android:text="fisika"
                android:id="@+id/btnFisika"
                android:background="#00ADB5"
                android:layout_toRightOf="@id/btnMtk"
                android:layout_below="@id/btnBinggris"
                android:layout_width="160dp"
                android:layout_height="100dp"/>

            <Button
                android:layout_margin="2dp"
                android:text="Bahasa Indonesia"
                android:id="@+id/btnBindo"
                android:background="#FCE38A"
                android:layout_below="@id/btnMtk"
                android:layout_width="160dp"
                android:layout_height="100dp"/>

            <Button
                android:layout_margin="2dp"
                android:text="Bahasa Jepang"
                android:id="@+id/btnBjepang"
                android:background="#FF2E63"
                android:layout_toRightOf="@id/btnBindo"
                android:layout_below="@id/btnFisika"
                android:layout_width="160dp"
                android:layout_height="100dp"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>